<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name="com.Empl.vo.Employee" table="Employee"> 
   		<id name="eid" column="eid" type="int">
   		    <generator class="assigned"/>
   		</id>
        <property name="ename" column="ename" length="45" />
        <property name="salary" column="salary" type="double" />
        <property name="dept" column="dept" type="int" />
        <property name="eimg" column="eimage" length="45" />
        <property name="password" column="pass" length="45"/>
   </class>
</hibernate-mapping>